    // Navbar (sit on top)
    #id03.modal
      form.modal-content.animate(action='#')
        .imgcontainer
          span.close(onclick="document.getElementById('id03').style.display='none'", title='Close Modal') ×
        .container
          h1.w3-center  Welcome Cardinals!
          input#signup1(type='text', placeholder='First name', name='fname', style='width:49%;', required='')
          input#signup2(type='text', placeholder='Last name', name='lname', style='width:49%;', required='')
          input#signup3(type='text', placeholder='Phone Number', name='phone', style='width:49%;', required='')
          input#signup4(type='text', placeholder='Zip Code', name='zip', style='width:49%;', required='')
          input#signup5(type='text', placeholder='uname@plattsburgh.edu', name='email', style='width:99%;', required='')
          input#signup6(type='password', placeholder='Password', name='pass', style='width:99%;', required='')
          input#signup7(type='password', placeholder='Confirm password', name='confirm_pass', style='width:99%;', required='')
          button#signupButton(type='button', onclick='signup()') Signup
        .container(style='background-color:#f1f1f1')
          button.cancelbtn(type='button', onclick="document.getElementById('id02').style.display='block'") Cancel
    // Change Password Overlay
    #id04.modal
      form.modal-content.animate(action='#')
        .imgcontainer
          span.close(onclick="document.getElementById('id04').style.display='none'", title='Close Modal') ×
        .passw_container
          .detail
            #passw_form
              form.register(action='', method='post', name='registration')
                fieldset
                  .password_container
                    h4.header Change Password
                    #form
                      form.register(action='', method='post', name='registration')
                        fieldset
                          .form-group
                            label.passwLabel(for='old') Old Password:
                            input.passwInput(name='old', required='')
                          .form-group
                            label.passwLabel(for='new') New Password:
                            input.passwInput(name='new', required='')
                          .form-group
                            label.passwLabel(for='confirm') Confirm Password:
                            input.passwInput(name='confirm', required='')
                          input.passwInput(type='submit', name='Upload', value='Change Password')                
